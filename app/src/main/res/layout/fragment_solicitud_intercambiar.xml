<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundestudiante"
    tools:context=".SolicitudIntercambiarFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        tools:context=".FormDispositivosFragment">
        <TextView
            android:id="@+id/txtViewRegistrarArtiInter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/mclaren"
            android:text="ArtÃ­culo a Intercambiar"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.477"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <LinearLayout
            android:id="@+id/linearLayoutArtiInter"
            android:layout_width="370dp"
            android:layout_height="550dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:background="@drawable/round_scroll_form_registrar"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/txtViewRegistrarArtiInter"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="@+id/txtViewRegistrarArtiInter"
            app:layout_constraintTop_toBottomOf="@+id/txtViewRegistrarArtiInter">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textFotoInter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="105dp"
                    android:text="Foto:"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/linearLayoutInterArti"
                    android:layout_width="245dp"
                    android:layout_height="205dp"
                    android:layout_marginStart="59dp"
                    android:layout_marginTop="33dp"
                    android:layout_below="@+id/textFotoInter"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textFotoInter">

                    <ImageView
                        android:id="@+id/imagenInterArti"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/fondo_perfil"
                        android:gravity="center">
                    </ImageView>

                </LinearLayout>
                <ImageButton
                    android:id="@+id/imageButtonCamFotoInterArti"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="160dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_img_button"
                    android:backgroundTint="#8EAAD5"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayoutInterArti"
                    app:layout_constraintEnd_toEndOf="@+id/linearLayoutInterArti"
                    app:layout_constraintStart_toStartOf="@+id/linearLayoutInterArti"
                    app:layout_constraintTop_toTopOf="@+id/linearLayoutInterArti"
                    android:src="@drawable/ic_camara">

                </ImageButton>
                <TextView
                    android:id="@+id/textViewNameArtiInter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linearLayoutInterArti"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="180dp"
                    android:text="Nombre:"
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/editTextNameArtiInter"
                    android:layout_width="177dp"
                    android:layout_height="39dp"
                    android:layout_below="@+id/textViewNameArtiInter"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:ems="12"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewPrecioArtInter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editTextNameArtiInter"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="23dp"
                    android:layout_marginEnd="180dp"
                    android:text="Precio(S/.):"
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <EditText
                    android:id="@+id/editTextPrecioArtiInter"
                    android:layout_width="177dp"
                    android:layout_height="41dp"
                    android:layout_below="@+id/textViewPrecioArtInter"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:ems="12"
                    android:inputType="numberDecimal"
                    android:paddingLeft="10dp"
                    android:paddingTop="3dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="18sp" />


                <Button
                    android:id="@+id/btnAddArtiInter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/editTextPrecioArtiInter"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="100dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Solicitar Intercambio"
                    android:textSize="17sp"
                    android:theme="@style/Theme.login" />


            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/separadorForm"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/linearLayoutArtiInter"
            app:layout_constraintEnd_toEndOf="@+id/linearLayoutArtiInter"
            app:layout_constraintTop_toBottomOf="@+id/linearLayoutArtiInter">
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
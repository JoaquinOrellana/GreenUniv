<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewArticulosEstud"
    android:animateLayoutChanges="true"
    android:background="#9A9696"
    app:cardCornerRadius="25dp"
    android:layout_marginStart="90dp"
    app:cardElevation="7dp"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="210dp"

        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imageViewArticuloEstud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                tools:srcCompat="@tools:sample/avatars" />

        </RelativeLayout>
        <TextView
            android:id="@+id/textViewNombArti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Tablero Dibujo" />
        <TextView
            android:id="@+id/textViewEstadoArti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/md_theme_light_primary"
            android:text="Estado:" />
        <ImageButton
            android:id="@+id/btnVerMasArti"
            android:layout_width="46dp"
            android:layout_height="44dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="-15dp"
            android:layout_marginEnd="15dp"
            android:backgroundTint="@color/md_theme_light_primary"
            android:src="@drawable/ic_add" />


    </LinearLayout>
</androidx.cardview.widget.CardView>